<link rel='stylesheet' href='/stylesheets/style-game-info.css' />
<%- include('../partials/header') %>
<section>
    <h1><%= game.gameTitle %></h1>
    <table>
        <thead>
            <tr>
                <th>Company</th>
                <th>ESRB</th>
                <th>Release Year</th>
                <th>Platforms</th>
                <th>CrossPlatform</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <img src="<%= game.image %>" alt="">
                <td><%= game.maker %></td>
                <td><%= game.esrb %></td>
                <td><%= game.releaseYear %></td>
                <td><%= game.platforms %></td>
                <td><%= game.crossPlatform %></td>
                <td><%= game.genre %></td>
            </tr>
        </tbody>
    </table>
</section>
<br><br><h2>Reviews</h2>
<% if (user) { %> 
  <form id="add-review-form" method="POST"
    action="/games/<% game._id %> ">
    <label>Reviews:</label>
    <textarea name="message"></textarea>
    <label>Rating:</label>
    <select name="rating">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5" selected>5</option>
   </select>
    <input type="submit" value="Add Review">
  </form>
<% } %> 

<% if (game.reviews.length) { %>
  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
        <th>Review</th>
        <th>Rating</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% let total = 0 %>
      <% game.reviews.forEach(function(r) { %>
        <% total += r.rating %>
        <tr>
          <td class="review-user"><img alt="avatar" src="<%= r.userAvatar %>"><%= r.userName %></td>
          <td><%= r.createdAt.toLocaleDateString() %></td>
          <td><%= r.message %></td>
          <td><%= r.rating %></td>
          <td>
            <% if (user && user.id.equals(r.user)) { %> 
              <form action="/reviews/<%= r._id %>?_method=DELETE" method="POST">
                <button type="submit">X</button>
              </form>
            <% } %> 
          </td>
        </tr>
      <% }); %>
      <tr>
        <td colspan="3"></td>
        <td><strong><%= (total / game.reviews.length).toFixed(1) %></strong></td>
      </tr>
    </tbody>
  </table>
<% } else { %>
  <h5>No Reviews Yet</h5>
<% } %>
