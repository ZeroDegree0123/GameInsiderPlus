<link rel='stylesheet' href='/stylesheets/styleGameInfo.css' />
<%- include('../partials/header') %>
<section>
    <h1><%= game.gameTitle %></h1>
    <table>
        <thead>
            <tr>
                <th>Company</th>
                <th>ESRB</th>
                <th>Release Year</th>
                <th>Platforms</th>
                <th>CrossPlatform</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
           <% Game.forEach(function(game) {%>
            <tr>
                <img src="<%= game.image %>" alt="">
                <td>
                    <%= game.maker %>
                </td>
                <td>
                    <%= game.esrb %>
                </td>
                <td>
                    <%= game.releaseYear %>
                </td>
                <td>
                    <%= game.platforms %>
                </td>
                <td>
                    <%= game.crossPlatform %>
                </td>
                <td>
                    <%= game.genre %>
                </td>
                <td>
                    <form action="/games/<%= game._id %>?_method=DELETE" method="POST">
                        <button type="submit">X</button>
                    </form>
                </td>
            </tr>
            <% }); %>
        </tbody>
    </table>
</section>
